# Copy this file to .env and fill in your credentials

# Anthropic API key for Claude (optional - uses Claude CLI if not set)
# ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI API key (for voicemail transcription)
OPENAI_API_KEY=sk-xxxxx

# Email credentials (Gmail)
# For Gmail, use an App Password (not your regular password)
# See: https://support.google.com/accounts/answer/185833
EMAIL_USER=your-car-search@gmail.com
EMAIL_PASSWORD=your-app-password

# Twilio credentials (for SMS)
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# Buyer information (used in communications)
BUYER_NAME=Your Name
BUYER_PHONE=+1xxxxxxxxxx

# Optional: Database path (defaults to ./carsearch.db)
# DATABASE_PATH=./carsearch.db
